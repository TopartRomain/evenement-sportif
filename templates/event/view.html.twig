{% extends 'base.html.twig' %}

{% block body %}
<div class="container my-4">
<h1 class="my-4">Détails de l'événement : {{ event.name }}</h1>

<div class="mb-4">
    <p><strong>Date :</strong> {{ event.date|date('Y-m-d H:i') }}</p>
    <p><strong>Lieu (Longitude) :</strong> {{ event.locationLongitude }}</p>
    <p><strong>Lieu (Latitude) :</strong> {{ event.locationLatitude }}</p>
</div>

<h2 class="my-4">Participants</h2>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nom</th>
            <th scope="col">Email</th>
        </tr>
    </thead>
    <tbody>
        {% for participant in event.participants %}
            <tr>
                <td>{{ participant.id }}</td>
                <td>{{ participant.name }}</td>
                <td>{{ participant.email }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center">Aucun participant</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<div class="mt-4">
    <a href="{{ path('add_participant_event', { id: event.id }) }}" class="btn btn-success">Ajouter un participant</a>
    <a href="{{ path('list_events') }}" class="btn btn-secondary">Retour à la liste des événements</a>
</div>
</div>
{% endblock %}
